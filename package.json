{
  "name": "ultra-nest-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "lint": "echo 'lint step omitted for minimal setup'",
    "perf:health": "docker run --rm -e TARGET_URL=${TARGET_URL:-http://host.docker.internal:3000/health} -e VUS -e DURATION -v $PWD:/scripts grafana/k6 run /scripts/k6-health-test.js",
    "test": "scripts/test-endpoint.sh",
    "quicktest": "npm run quicktest:build && npm run quicktest:run",
    "quicktest:build": "docker build -t ultra-nest-api .",
    "quicktest:run": "scripts/quicktest.sh",
    "quicktest:8core": "npm run quicktest:build && scripts/quicktest-8core.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "fastify": "^4.26.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
  "ts-node-dev": "^2.0.0",
  "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
