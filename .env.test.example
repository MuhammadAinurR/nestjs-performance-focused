# Test Environment Configuration
# This file contains environment variables for testing

# Application
NODE_ENV=test
PORT=3001

# Database (Test Database)
DATABASE_URL="postgresql://postgres:password@localhost:5433/mpix_backend_test?schema=public"

# JWT Configuration (Use different secrets for testing)
JWT_SECRET="test-jwt-secret-key-for-testing"
JWT_REFRESH_SECRET="test-refresh-secret-key-for-testing"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# API Configuration
API_PREFIX="api/v1"

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Performance
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Logging (Set to error for cleaner test output)
LOG_LEVEL="error"

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Test-specific settings
TEST_TIMEOUT=30000
TEST_DATABASE_RESET=true
