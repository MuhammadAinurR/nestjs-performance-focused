# ========================================
# MDC Backend Environment Configuration
# ========================================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=0.1.0

# ========================================
# Database Configuration
# ========================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=mdcn

# Prisma Database URL
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5432/mdcn?schema=public"

# Docker Database Configuration (when using docker-compose)
# DATABASE_URL="postgresql://mpix_user:mpix_password@localhost:5433/mpix_db?schema=public"

# ========================================
# JWT Authentication Configuration
# ========================================

# JWT Secret Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production

# JWT Token Expiration Times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# Redis Configuration (Optional)
# ========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Performance Testing Configuration
# ========================================

# Load Testing Parameters (for k6 or similar tools)
VUS=10
DURATION=30s
TARGET_URL=http://localhost:3000

# Docker Resource Limits
DOCKER_MEMORY=1g
DOCKER_CPUS=1.0

# ========================================
# Security Configuration
# ========================================

# CORS Settings
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ========================================
# Logging Configuration
# ========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/Disable SQL Query Logging
LOG_SQL_QUERIES=false

# ========================================
# Development Tools
# ========================================

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=docs

# Hot Reload (development only)
WATCH_MODE=true

# ========================================
# Production Configuration
# ========================================

# SSL/TLS Configuration (production)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# External Services URLs (if applicable)
# API_BASE_URL=https://your-api-domain.com
# WEBHOOK_URL=https://your-webhook-endpoint.com

# Monitoring and Health Checks
# HEALTH_CHECK_TIMEOUT=30000

# ========================================
# Email Configuration (if applicable)
# ========================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@your-domain.com

# ========================================
# File Storage Configuration (if applicable)
# ========================================

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Local File Storage
# UPLOAD_PATH=./uploads
# MAX_FILE_SIZE=10485760